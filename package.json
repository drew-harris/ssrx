    "bun-types": "1.0.4",
    "eslint": "8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "nx": "16.10.0",
    "tailwindcss": "3.3.3",
    "typescript": "5.2.2",
    "vite": "5.0.0-beta.6",
    "vite-plugin-inspect": "0.7.40"
  },
