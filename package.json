    "@super-ssr/solid": "workspace:*",
    "@super-ssr/adapter-tanstack-router": "workspace:*",
    "@remix-run/router": "file:.yalc/@remix-run/router",
    "react-router-dom": "file:.yalc/react-router-dom"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "~0.5.1",
