{
  "name": "super-ssr-monorepo",
  "private": true,
  "packageManager": "yarn@4.0.0-rc.40",
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "nx run-many -t dev -p '@super-ssr/*'",
    "build": "nx run-many -t build -p '@super-ssr/*'",
    "dep-graph": "nx graph"
  },
  "resolutions": {
    "@super-ssr/vite": "workspace:*",
