{
  "extends": "../../tsconfig.base.json",
  "include": ["types/*", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "~app": ["./app/app.tsx"],
      "~api/*": ["./api/*"],
      "~/*": ["./app/*"]
    },
    "plugins": [
      {
        "name": "typescript-remix-routes-plugin"
      }
    ]
  }
}
